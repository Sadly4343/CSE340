<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%# messages() %>
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
                    <div class="register-form">
                        <form action="/account/register" method="POST">
                            <label for="first">First Name:</label>
                            <input type="text" id="first" name="account_firstname" required>
                            <label for="last">Last Name:</label>
                            <input type="text" id="last" name="account_lastname" required>
                            <label for="email">Email:</label>
                            <input type="email" id="email" name="account_email" required>
                            <label for="accountPassword">Password:</label>
                            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital
                                letter and 1
                                special character</span>
                            <input type="password" name="account_password" id="accountPassword" required
                                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

                            <button type="submit">Register</button>

                        </form>

                    </div>