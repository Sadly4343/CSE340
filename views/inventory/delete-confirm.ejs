<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%# messages() %>
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
                    <div class="inventory-form">
                        <form action="/inv/deleteinventory" method="post" id="deleteForm">
                            <label for="make">Vehicle Make:</label>
                            <input type="text" id="make" name="inv_make" required value="<%= locals.inv_make %>"
                                pattern="^[a-zA-Z0-9]*$" readonly>
                            <span>Vehicle Make no special characters</span>
                            <label for="model">Model:</label>
                            <input type="text" id="model" name="inv_model" required value="<%= locals.inv_model %>"
                                pattern="^[a-zA-Z0-9]*$" readonly>
                            <span>Vehicle Model no special characters</span>
                            <label for="year">Vehicle Year:</label>
                            <input type="text" id="year" name="inv_year" required value="<%= locals.inv_year %>"
                                pattern="^[0-9]*$" readonly>
                            <span>Year Must be four numbers only</span>
                            <label for="price">Vechicle Price:</label>
                            <input type="number" id="price" name="inv_price" required value="<%= locals.inv_price %>"
                                readonly>
                            <span>Color one word no spaces or special characters</span>
                            <input type="submit" name="submit" value="Delete Vehicle">
                            <input type="hidden" name="inv_id" <% if (locals.inv_id) { %> value="<%= locals.inv_id %>"
                                <% } %>>
                        </form>
                    </div>